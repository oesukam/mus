NODE_ENV=development
PORT=4000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=ecommerce

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Rate Limiting (requests per time window)
THROTTLE_SHORT_TTL=1000
THROTTLE_SHORT_LIMIT=10
THROTTLE_MEDIUM_TTL=10000
THROTTLE_MEDIUM_LIMIT=50
THROTTLE_LONG_TTL=60000
THROTTLE_LONG_LIMIT=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/v1/auth/google/callback

# S3 Configuration (for product image uploads)
# For MinIO (local development):
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_S3_BUCKET_NAME=products

# For AWS S3 (production), comment out S3_ENDPOINT and S3_FORCE_PATH_STYLE and use:
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Email Configuration (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=noreply@yourdomain.com  # Must be a verified domain in Resend
EMAIL_FROM_NAME=MUS Store
FRONTEND_URL=http://localhost:3000

# Admin User Seeding (for migrations)
# These variables are used to create the default admin user on first migration run
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NAME=Admin User
ADMIN_PROVIDER=google  # Options: google, local

SWAGGER_ENABLED=true
SWAGGER_USER=swagger_user
SWAGGER_PASSWORD=swagger_user_pass
